<div style="width: 500px; margin:auto">
    <h4 class="display-6">{{this.model.customerName}} Details</h4>

    <ul class="list-group">
        <li class="list-group-item">Name            :    {{this.model.customerName}}</li>
        <li class="list-group-item">ID              :   {{this.model.customerId}}</li>
        <li class="list-group-item">Company         :   {{this.model.companyName}}</li>
        <li class="list-group-item">Phone           :   {{this.model.customerPhone}}</li>
        <li class="list-group-item">Email           :   {{this.model.customerEmail}}</li>
        <li class="list-group-item">Address         :   {{this.model.customerAddress}}</li>
        <li class="list-group-item">Postal Code     :   {{this.model.customerPin}}</li>
    </ul>

<button type="submit" class="btn btn-primary" {{action "editCustomer" this.model.customerName}}>Edit</button>
<button type="submit" class="btn btn-primary" {{action "deleteCustomer" this.model.customerName}}>Delete</button>

</div>

{{outlet}}